    <!--<bean id="userKeyGenerator" class="org.springframework.cache.interceptor.SimpleKeyGenerator"/>-->


    <bean id="defaultKeyGenerator" class="com.nhsoft.module.report.util.SpringCacheKeyGenerator"/>
    <bean name="serviceCacheManager" class="org.springframework.data.redis.cache.RedisCacheManager">
        <constructor-arg name="redisOperations" ref="redisTemplate"/>
        <!--设置过期时间300s 默认为0,不过期-->
        <property name="defaultExpiration" value="300"/>
    </bean>
    <cache:annotation-driven cache-manager="serviceCacheManager"  key-generator="defaultKeyGenerator"/>

</beans>